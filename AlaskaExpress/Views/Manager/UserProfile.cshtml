@model AlaskaExpress.Models.Manager

@{
    ViewBag.Title = "MyProfile";
}

<div class="row mx-5">
    <div class="col-xs-1 col-sm-1 col-md-3 col-lg-2"></div>
    <div class="col-xs-10 col-sm-10 col-md-6 col-lg-8 my-5">

        <h2>My Profile</h2>

        <br />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Manager_email)

                <div class="form-group py-2">
                    @Html.LabelFor(model => model.Manager_password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Manager_password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Manager_password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group py-2">
                    @Html.LabelFor(model => model.Manager_fullname, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Manager_fullname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Manager_fullname, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group py-2">
                    @Html.LabelFor(model => model.Manager_address, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Manager_address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Manager_address, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group py-2">
                    @Html.LabelFor(model => model.Manager_nid, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Manager_nid, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Manager_nid, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group py-2">
                    @Html.LabelFor(model => model.Manager_phone, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Manager_phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Manager_phone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group py-2" hidden>
                    @Html.LabelFor(model => model.Manager_addedby, "Manager_addedby", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("Manager_addedby", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Manager_addedby, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group py-2">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-xs-1 col-sm-1 col-md-3 col-lg-2"></div>
</div>

<div class="row mx-5">
    @Html.ActionLink("Back to Home", "")
    <br />
    <br />
    <br />
</div>
