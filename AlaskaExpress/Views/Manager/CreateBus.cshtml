@model AlaskaExpress.Models.Bus

@{
    ViewBag.Title = "CreateBus";
}

<div class="row mx-5">
    <h2>Add New Bus</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group py-3">
            @Html.LabelFor(model => model.Bus_start_location, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Bus_start_location, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bus_start_location, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group py-3">
            @Html.LabelFor(model => model.Bus_end_location, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Bus_end_location, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bus_end_location, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group py-3">
            @Html.LabelFor(model => model.Bus_cost_per_seat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Bus_cost_per_seat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bus_cost_per_seat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group py-3">
            @Html.LabelFor(model => model.Bus_total_seat, htmlAttributes: new { @class = "control-label col-md-2" })
            <input type="number" class="form-control" name="Bus_total_seat" value=22>
        </div>

        <div class="form-group py-3">
            @Html.LabelFor(model => model.Bus_coach, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Bus_coach, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bus_coach, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group py-3">
            @Html.LabelFor(model => model.Bus_numberplate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Bus_numberplate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bus_numberplate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group py-3" hidden>
            @Html.LabelFor(model => model.Bus_addedby, "Bus_addedby", htmlAttributes: new { @class = "control-label col-md-2" })
            <input type="text" class="form-control" name="Bus_addedby" value=@Session["userEmail"].ToString()>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-info m-1" />
            </div>
        </div>
        </div>
    }

    <div class="form-actions no-color">
        @Html.ActionLink("Back to list", "BusList")
    </div>

    <br />
    <br />
    <br />
</div>
