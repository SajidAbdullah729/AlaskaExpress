@model List<AlaskaExpress.Models.Bus>

@{
    ViewBag.Title = "BusList";
}

<div class="row mx-5">

    <h2>Bus List</h2>

    <p>
        <a class="btn btn-info" href="/Manager/CreateBus">Add new bus</a>
        &nbsp;
        <a class="btn btn-danger" href="/Manager/DeleteBus">Delete bus</a>
    </p>

    <br />
    <br />
    <br />

    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Bus ID</th>
                <th>Start Location</th>
                <th>End Location</th>
                <th>Cost Per Seat</th>
                <th>Total Seat</th>
                <th>Coach</th>
                <th>Numberplate</th>
                <th>Addedby</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Bus_id</td>
                    <td>@item.Bus_start_location</td>
                    <td>@item.Bus_end_location</td>
                    <td>@item.Bus_cost_per_seat</td>
                    <td>@item.Bus_total_seat</td>
                    <td>@item.Bus_coach</td>
                    <td>@item.Bus_numberplate</td>
                    <td>@item.Bus_addedby</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-actions no-color">
        @Html.ActionLink("Back to Home", "")
    </div>

    <br />
    <br />
    <br />
</div>
