@model AlaskaExpress.Models.Manager

@{
    ViewBag.Title = "DeleteManager";
}


<div class="row mx-5">
    <h2>Delete Manager</h2>

    <form action="/Admin/DeleteManager" method="post">
        <div class="form-group pb-3">
            <label for="">Enter manager's email</label>
            <input type="text" class="form-control" id="txtdelete" placeholder="Email" name="Manager_email" required minlength ="0">
        </div>
        <button class="btn btn-danger m-3">Delete</button>
    </form>

    <br />
    <br />
    <br />

    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Manager's Email</th>
                <th>Manager's Password</th>
                <th>Manager's Fullname</th>
                <th>Manager's Address</th>
                <th>Manager's NID</th>
                <th>Manager's Phone</th>
                <th>Manager Addedby</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.managers)
            {
                <tr>
                    <td>@item.Manager_email</td>
                    <td>@item.Manager_password</td>
                    <td>@item.Manager_fullname</td>
                    <td>@item.Manager_address</td>
                    <td>@item.Manager_nid</td>
                    <td>@item.Manager_phone</td>
                    <td>@item.Manager_addedby</td>
                </tr>
            }

        </tbody>
    </table>

    <div class="form-actions no-color">
        @Html.ActionLink("Back to List", "ManagerList")
    </div>

    <br />
    <br />
    <br />

</div>

