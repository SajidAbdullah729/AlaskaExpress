<script>
    function seatClicked(seat) {

        var seatValue = document.getElementById("input" + seat).value;
        var seatValues = document.getElementById("selectedAllSeats").value;

        if (seatValue == 0) {
            document.getElementById("img"+seat).src = "/Images/Blue.png";
            document.getElementById("input" + seat).value = 1;
            document.getElementById("seatCounter").value++;
            document.getElementById("selectedAllSeats").value = seatValues + seat + ",";

        } else if (seatValue == 1) {
            document.getElementById("img"+seat).src = "/Images/Black.png";
            document.getElementById("input" + seat).value = 0;
            var replace = seatValues.replace(seat + ",", "");
            document.getElementById("seatCounter").value--;
            document.getElementById("selectedAllSeats").value = replace;
        }
    }
</script>
